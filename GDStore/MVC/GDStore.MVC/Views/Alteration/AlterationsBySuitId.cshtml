@model System.Collections.Generic.List<GDStore.DAL.Interface.Domain.Alteration>

@{
    ViewBag.Title = "Alterations for a selected suit";
}
<h2>Alterations for a selected suit</h2>

@{
    if (Model.Any())
    {
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Suit Id</th>
                <th>Status</th>
                <th>Item Id to alter</th>
                <th>Payment</th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SuitId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @if (item.SleeveId != null)
                {
                    @Html.DisplayFor(modelItem => item.SleeveId)
                }
                @if (item.TrouserLegId != null)
                {
                    @Html.DisplayFor(modelItem => item.TrouserLegId)
                }
            </td>
            <td>
                <a>@Html.ActionLink("Make payment", "Make", "Payment", new {item.SuitId, AlterationId = item.Id }, new { @class = "btn btn-default" })</a>
            </td>
        </tr>
            }
        </table>
        <a>@Html.ActionLink("Add alteration", "Add", "Alteration", new { ViewBag.SuitId }, new { @class = "btn btn-default" })</a>
    }
    else
    {
        <h2>No alterations found for this suit</h2>
        <a>@Html.ActionLink("Add alteration", "Add", "Alteration", new { ViewBag.SuitId }, new { @class = "btn btn-default" })</a>
    }
}